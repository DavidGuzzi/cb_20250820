# Auto detect text files and perform LF normalization
* text=auto

# Ensure consistent line endings across platforms
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.dockerfile text eol=lf
Dockerfile* text eol=lf

# Handle binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Python specific
*.pkl binary
*.pickle binary
*.pyc binary
*.pyo binary
*.pyd binary

# Node.js specific
*.node binary

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary

# Font files
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary
